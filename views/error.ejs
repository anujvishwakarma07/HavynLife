<% layout("layouts/boilerplate") %>
<body class="bg-light">

  <div class="container d-flex align-items-center justify-content-center vh-100">
    <div class="card shadow-lg text-center p-4" style="max-width: 600px; width: 100%;">
      
      <div class="mb-3">
        <h1 class="display-4 text-danger">⚠️ <%= status || 500 %></h1>
      </div>

      <h3 class="mb-3"><%= message %></h3>

      <p class="text-muted">
        Something went wrong. Please try again later or go back to the homepage.
      </p>

      <div class="mt-4">
        <a href="/listings" class="btn btn-primary me-2">Go to Listings</a>
        <a href="/" class="btn btn-outline-secondary">Home</a>
      </div>

    </div>
  </div>

</body>

